<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/whackamolepic"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/main_title_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="76sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/mole_font"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/main_high_score_tv"
        android:layout_width="186dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_marginStart="220dp"
        android:text="@string/session_score"
        android:textStyle="bold"
        android:textSize="34sp"
        android:fontFamily="@font/mole_font"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_title_tv"
        >
    </TextView>

    <Button
        android:id="@+id/main_new_game_btn"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_marginTop="472dp"
        android:backgroundTint="@color/red"
        android:fontFamily="@font/mole_font"
        android:text="@string/new_game"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_high_score_tv"></Button>

</androidx.constraintlayout.widget.ConstraintLayout>